{
  "compilerOptions": {
    "noEmit": true,
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "baseUrl": ".",
    "paths": {
      "racehorse": ["./web/racehorse/src/main/index.ts"]
    }
  },
  "include": ["./web/*/src/**/*"],
  "exclude": ["./web/example/**/*"]
}
