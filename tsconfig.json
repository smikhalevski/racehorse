{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "target": "ES5",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES7"
    ],
    "baseUrl": ".",
    "paths": {
      "racehorse": [
        "./packages/racehorse/src/main"
      ],
      "@racehorse/*": [
        "./packages/*/src/main"
      ]
    }
  },
  "include": [
    "./packages/*/rollup.config.ts",
    "./packages/*/src/**/*"
  ]
}
