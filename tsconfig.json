{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES5",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES7"
    ],
    "baseUrl": ".",
    "paths": {
      "racehorse": [
        "./web/racehorse/src/main"
      ],
      "@racehorse/*": [
        "./web/*/src/main"
      ]
    }
  },
  "include": [
    "./web/*/src/main/**/*"
  ],
  "exclude": [
    "./web/example/**/*"
  ]
}
