{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "target": "ES6",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES7"
    ],
    "baseUrl": ".",
    "paths": {
      "racehorse": [
        "./web/racehorse/src/main"
      ],
      "@racehorse/*": [
        "./web/*/src/main"
      ]
    }
  },
  "include": [
    "./web/*/src/**/*"
  ],
  "exclude": [
    "./web/example/**/*"
  ]
}
